<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Inclusion of Spring default logback setup -->
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <springProperty scope="context" name="appName" source="spring.application.name"/>
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://loki:3100/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>app=${appName},host=${HOSTNAME:-unknown},traceID=%X{traceId:-NONE},level=%level</pattern>
            </label>
            <!-- Replace FILE_LOG_PATTERN with an explicit pattern if needed -->
            <message>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </message>
            <sortByTime>true</sortByTime>
        </format>
    </appender>
    <!-- Apply the Loki appender to the root logger -->
    <root level="INFO">
        <appender-ref ref="LOKI"/>
    </root>
</configuration>